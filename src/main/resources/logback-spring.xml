<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="appName" source="spring.application.name"/>

    <!--
        Profiles control which masking layers are active:

        (no profile)     text output + MaskingPatternLayout regex masking
        json             JSON output + MaskingJsonGeneratorDecorator field masking
        logbook          adds Logbook HTTP request/response body masking
        json,logbook     JSON output + Logbook (both)
    -->

    <!-- ==================== TEXT OUTPUT (default, when "json" profile is NOT active) ==================== -->
    <springProfile name="!json">
        <appender name="CONSOLE_TEXT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
                <layout class="com.kss.proj.springmvccoroutines.logging.MaskingPatternLayout">
                    <pattern>%d{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
                </layout>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE_TEXT"/>
        </root>
    </springProfile>

    <!-- ==================== JSON OUTPUT (when "json" profile IS active) ==================== -->
    <springProfile name="json">
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <jsonGeneratorDecorator class="com.kss.proj.springmvccoroutines.logging.MaskingJsonGeneratorDecorator"/>
                <includeMdcKeyName>traceId</includeMdcKeyName>
                <includeMdcKeyName>spanId</includeMdcKeyName>
                <includeMdcKeyName>userId</includeMdcKeyName>
                <customFields>{"application":"${appName}"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
    </springProfile>

    <!-- ==================== LOGBOOK TRACE (only when "logbook" profile is active) ==================== -->
    <springProfile name="logbook">
        <logger name="org.zalando.logbook" level="TRACE"/>
    </springProfile>
</configuration>
